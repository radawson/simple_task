{
  "name": "backend",
  "version": "0.13.0",
  "description": "Node.js API Backend",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node --experimental-modules server.js",
    "dev": "nodemon --experimental-modules server.js",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules NODE_ENV=test jest --detectOpenHandles --forceExit --runInBand --config jest.config.mjs",
    "seed": "cross-env NODE_ENV=development node --experimental-modules scripts/seed.js",
    "migrate:check": "node scripts/check-imports.js"
  },
  "jest": {
    "testEnvironment": "node",
    "globalSetup": "./src/tests/setup.js",
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "setupFilesAfterEnv": [
      "./src/tests/setup.js"
    ],
    "testTimeout": 10000,
    "verbose": true,
    "forceExit": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/radawson/webtools.git"
  },
  "keywords": [
    "node.js",
    "express",
    "jwt",
    "authentication",
    "mongodb"
  ],
  "author": "radawson",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/radawson/webtools/issues"
  },
  "homepage": "https://github.com/radawson/webtools#readme",
  "dependencies": {
    "@xmpp/client": "^0.13.1",
    "@xmpp/connection": "^0.13.1",
    "@xmpp/connection-tcp": "^0.13.1",
    "@xmpp/sasl": "^0.13.1",
    "@xmpp/stream-management": "^0.13.1",
    "@xmpp/xml": "^0.13.1",
    "argon2": "^0.41.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-rate-limit": "^7.4.1",
    "firebase-admin": "^12.7.0",
    "helmet": "^8.0.0",
    "ioredis": "^5.4.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.8.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "openid-client": "^6.1.3",
    "pg": "^8.13.1",
    "rotating-file-stream": "^3.2.5",
    "sequelize": "^6.37.5",
    "socket.io": "^4.8.1",
    "sqlite3": "^5.1.7",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "supertest": "^7.0.0"
  }
}